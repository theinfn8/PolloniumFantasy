<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chaostek.polloniumfantasy.DataEditorController">
    <top>
        <ToolBar prefHeight="40">
            <items>
                <Button fx:id="createCharacter" text="Create" onAction="#switchToCharacterCreator"/>
				<Button fx:id="viewCharacter" text="View Characters" onAction="#switchToCharacterViewer" />
				<Button fx:id="editData" text="Edit Database" />
				<Button fx:id="mainView" text="Exit" onAction="#switchToMain" />
            </items>
        </ToolBar>
    </top>
    <center>
        <VBox >
            <Button fx:id="skillsButton" text="Edit Skills" onAction="#switchToSkillHandler"/>
            <Button fx:id="psionicsButton" text="Edit Psionics" onAction="#switchToPsionicHandler"/>
            <Button fx:id="spellsButton" text="Edit Spells" onAction="#switchToSpellHandler"/>
			<Button fx:id="itemsButton" text="Edit Items" onAction="#switchToItemHandler" />
        </VBox>
    </center>
</BorderPane>